<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jst.web.dao.JstAccountDAO">

    <resultMap type="com.jst.web.model.database.JstAccount" id="accountMap">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="registerTime" column="register_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="saveAccount" useGeneratedKeys="true" keyProperty="id" parameterType="com.jst.web.model.database.JstAccount">
        INSERT  INTO JST_ACCOUNT (
            name,
            phone,
            password,
            register_time,
            update_time
        ) VALUES (
            #{name},
            #{phone},
            #{password},
            #{registerTime},
            #{updateTime}
        );
    </insert>

    <update id="updateAccount" parameterType="com.jst.web.model.database.JstAccount">
        UPDATE JST_ACCOUNT
        SET name = #{name},
            phone = #{phone},
            password = #{password},
            update_time = #{updateTime}
    </update>

    <select id="getAccountById" parameterType="java.lang.Long" resultMap="accountMap">
        SELECT * FROM JST_ACCOUNT WHERE id=#{id};
    </select>

    <select id="getAccountIds" parameterType="java.lang.String" resultType="java.lang.Long">
        SELECT id FROM JST_ACCOUNT WHERE phone LIKE '%#{phone}%' OR name LIKE '%#{name}%'
    </select>

</mapper>